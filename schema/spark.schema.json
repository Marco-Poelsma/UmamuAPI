{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$data": "/data/spark.data.json",
  "spark": {
    "id": {
      "type": "integer",
      "autoIncrement": true,
      "primaryKey": true,
      "nullable": false
    },
    "name": {
      "type": "string",
      "maxLength": 30,
      "nullable": false
    },
    "description": {
      "type": "string",
      "maxLength": 600,
      "nullable": false
    },
    "type": {
      "type": "string",
      "enum": ["stat", "aptitude", "skill", "unique_skill"],
      "nullable": false
    }
  }
}
